<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:endColor="@color/color_gris_oscuro"
                android:startColor="@color/color_gris"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/color_gris_claro" />
            <corners
                android:radius="8dp" />
            <padding
                android:left="3dp"
                android:top="3dp"
                android:right="3dp"
                android:bottom="3dp" />
        </shape>
    </item>
    
    <item android:state_enabled="false">
         <shape>
			<gradient
                android:endColor="@color/color_gris_claro"
                android:startColor="@color/color_negro"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/color_gris" />
            <corners
                android:radius="8dp" />
            <padding
                android:left="3dp"
                android:top="3dp"
                android:right="3dp"
                android:bottom="3dp" />

         </shape>   
    </item>


    <item>        
        <shape>
            <gradient
                android:endColor="@color/color_gris"
                android:startColor="@color/color_gris_boton"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/color_gris" />
            <corners
                android:radius="8dp" />
            <padding
                android:left="3dp"
                android:top="3dp"
                android:right="3dp"
                android:bottom="3dp" />
        </shape>
    </item>
</selector>