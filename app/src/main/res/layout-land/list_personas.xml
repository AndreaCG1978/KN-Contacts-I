<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent">


	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:orientation="vertical">

		<LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:gravity="center" android:layout_marginTop="5dp"
			android:layout_marginBottom="5dp">

			<LinearLayout android:orientation="horizontal"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:background="@drawable/custom_text_view_categoria"
				android:gravity="center_horizontal">

				<ImageView android:id="@+id/imgPrefLeft"
					android:layout_width="13dp" android:layout_height="13dp"
					android:src="@drawable/pref_detalle_icon" android:gravity="start"
					android:layout_marginTop="6dp" android:layout_marginEnd="60dp"
					android:contentDescription="imgPrefLeft" />

				<TextView android:id="@+id/categoriasSeleccionadasId"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
					android:layout_marginTop="2dp" android:layout_marginBottom="2dp"
					android:textColor="@color/color_azul_oscuro" android:textSize="12sp"
					android:padding="4dp" android:gravity="center" />

				<ImageView android:id="@+id/imgPrefRight"
					android:layout_width="13dp" android:layout_height="13dp"
					android:src="@drawable/pref_detalle_icon" android:gravity="end"
					android:layout_marginTop="6dp" android:layout_marginStart="60dp"
					android:contentDescription="imgPrefRight" />

			</LinearLayout>


		</LinearLayout>

		<ExpandableListView android:id="@android:id/list"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:scrollbarAlwaysDrawVerticalTrack="true"
			android:layout_marginBottom="55dp" android:divider="@color/color_negro"
			android:listSelector="@android:color/transparent"
			android:cacheColorHint="#00000000" android:childDivider="@color/color_negro"
			android:scrollingCache="false">
		</ExpandableListView>
		<TextView android:id="@android:id/empty"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_margin="10dp" android:text="@string/text_sinDatos" />
		<ListView android:id="@+id/listaEspecial"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:dividerHeight="10dp" android:divider="@color/color_negro"
			android:layout_marginBottom="55dp" android:listSelector="@android:color/transparent"
			android:cacheColorHint="#00000000" android:smoothScrollbar="true"
			android:scrollbars="none" android:visibility="gone" />

	</LinearLayout>
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_gravity="bottom"
		android:gravity="center_vertical" android:layout_margin="5dp">

		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:gravity="center_vertical"
			android:layout_below="@id/linea2" android:orientation="horizontal">

			<ImageButton android:id="@+id/imagenAddContacto"
				android:background="@drawable/person_add_icon"
				android:layout_height="31dp" android:layout_width="31dp"
				android:contentDescription="imagenAddContacto" />

			<ImageButton android:id="@+id/buttonSwitchOrganizacion"
				android:layout_width="29dp" android:layout_height="29dp"
				android:layout_marginStart="14dp" android:background="@drawable/organizar_nombre"
				android:contentDescription="buttonSwitchOrganizacion" />

			<ImageButton android:id="@+id/buttonExpandContractAll"
				android:layout_width="27dp" android:layout_height="27dp"
				android:layout_marginStart="16dp" android:background="@drawable/expandir_icon"
				android:contentDescription="buttonExpandContractAll" />

			<ImageButton android:id="@+id/imagenPreferidos"
				android:layout_height="27dp" android:layout_width="27dp"
				android:layout_marginStart="16dp"
				android:contentDescription="imagenPreferidos" />

			<ImageButton android:id="@+id/botonProtegerCategorias"
				android:layout_width="29dp" android:layout_height="29dp"
				android:layout_marginStart="14dp"
				android:contentDescription="botonProtegerCategorias" />

			<com.boxico.android.kn.contacts.util.MultiSpinner
				android:id="@+id/multi_spinner" android:layout_width="80dp"
				android:layout_height="27dp" android:background="@drawable/custom_button"
				android:layout_gravity="center" 
				android:layout_marginStart="14dp" />

			<EditText android:id="@+id/entryBusquedaPersona"
				android:inputType="textPersonName" android:layout_height="35dp"
				android:layout_width="70dp" android:maxLength="15"
				android:layout_marginStart="12dp"
				android:paddingStart="7dp" android:textColor="@color/color_gris_oscuro"
				android:textSize="14sp"
				android:hint="@string/hint_busqueda"/>


			<ImageButton android:id="@+id/buttonTodasLasCategorias"
				android:layout_width="29dp" android:layout_height="29dp"
				android:layout_marginStart="12dp"
				android:background="@drawable/clear_icon"
				android:contentDescription="buttonTodasLasCategorias" />


			<TextView android:id="@+id/cantRegistros"
				android:layout_height="34dp" android:layout_width="34dp"
				android:layout_marginStart="14dp" android:textSize="12sp"
				>
			</TextView>

		</LinearLayout>
	</RelativeLayout>



</FrameLayout>
