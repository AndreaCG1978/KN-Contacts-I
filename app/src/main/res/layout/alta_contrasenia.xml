<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="@color/color_gris_claro">


	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:layout_margin="15dp">


		<TextView android:text="@string/label_contrasenia"
			android:layout_width="110dp"
			android:layout_height="32dp"
			android:background="@drawable/custom_text_view_categoria_desc"
			android:textColor="@color/color_gris_claro"
			android:padding="7dp"
			android:gravity="end"
			android:textSize="12sp" />

		<EditText android:id="@+id/contrasenia1" android:inputType="textPassword"
			android:maxLength="20"
			android:hint="@string/hint_contrasenia"
            android:textColorHint="@color/color_gris"
			android:textColor="@color/color_gris_oscuro"
			android:layout_width="match_parent"
			android:layout_height="35dp"
			android:padding="5dp"
			android:textSize="14sp"
			android:layout_marginLeft="4dp"
			android:layout_marginRight="4dp"
            android:importantForAutofill="no" />

	</LinearLayout>

		<View android:layout_width="wrap_content" android:layout_height="1px"
			android:layout_marginBottom="8dp" android:background="@color/color_azul" />

	<Button android:id="@+id/botonActivarContrasenia"
		android:layout_width="wrap_content" android:layout_height="30dp"
		android:textColor="@color/color_blanco" android:background="@drawable/custom_button"
		android:text="@string/label_ok" android:textSize="12sp"
        android:padding="3dp"
		android:layout_margin="8dp" android:layout_gravity="center" />


</LinearLayout>
