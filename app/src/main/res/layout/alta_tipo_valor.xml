<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:gravity="center"
	android:background="@color/color_gris_oscuro">

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:layout_margin="8dp" android:gravity="center">

		<TextView android:id="@+id/label_tipo" android:text="@string/hint_tipo"
			android:layout_width="100dp" android:layout_height="wrap_content"
			android:textSize="13sp" android:padding="8dp" android:gravity="right"
			android:singleLine="true" android:background="@layout/custom_text_view_categoria_desc"
			android:textColor="@color/color_azul_oscuro" />

		<Spinner android:id="@+id/spinnerTipoValor"
			android:layout_width="fill_parent" android:layout_height="38dp"
			android:background="@layout/custom_button" android:layout_marginLeft="9dp" />

	</LinearLayout>

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:layout_margin="8dp" android:gravity="center">


		<TextView android:id="@+id/label_nuevo_tipo" android:text="@string/hint_nuevo_tipo"
			android:layout_width="100dp" android:layout_height="wrap_content"
			android:textSize="13sp" android:padding="8dp" android:gravity="right"
			android:singleLine="true" android:background="@layout/custom_text_view_categoria_desc"
			android:textColor="@color/color_azul_oscuro" />

		<EditText android:id="@+id/entryNuevoTipo" android:hint="@string/hint_tipo"
			android:layout_width="fill_parent"
			android:padding="8dp" android:textSize="14sp"
			android:layout_marginRight="4dp" android:layout_height="35dp"
			android:layout_marginLeft="9dp" android:inputType="textCapWords"
			android:maxLength="15" android:textColor="@color/color_azul_oscuro"/>

	</LinearLayout>


	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:layout_margin="8dp" android:gravity="center">


		<TextView android:id="@+id/label_valor" android:layout_width="100dp"
			android:layout_height="wrap_content" android:textSize="13sp"
			android:padding="8dp" android:gravity="right" android:singleLine="true"
			android:background="@layout/custom_text_view_categoria_desc"
			android:textColor="@color/color_azul_oscuro" />

		<EditText android:id="@+id/entryValor" android:layout_width="fill_parent"
			android:padding="8dp" android:textSize="14sp"
			android:layout_marginRight="4dp" android:layout_height="35dp"
			android:layout_marginLeft="9dp" android:inputType="textCapWords"
			android:gravity="top|left"
			android:maxLength="15" android:textColor="@color/color_azul_oscuro"/>

	</LinearLayout>
	<View android:layout_below="@id/nombre_contacto"
		android:layout_width="wrap_content" android:layout_height="1px"
		android:layout_marginBottom="8dp" android:background="@color/color_azul" />

	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:orientation="horizontal"
		android:gravity="center" android:layout_margin="12dp">

		<Button android:id="@+id/buttonRegistrarCategoria"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginRight="20dp" android:textColor="@color/color_azul"
			android:background="@layout/custom_button" android:text="@string/label_registrarPersona"
			android:textSize="13sp" />
		<Button android:id="@+id/buttonEliminarCategoria"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textColor="@color/color_azul" android:background="@layout/custom_button"
			android:text="@string/label_borrarPersona" android:textSize="13sp" />

	</LinearLayout>

</LinearLayout>
