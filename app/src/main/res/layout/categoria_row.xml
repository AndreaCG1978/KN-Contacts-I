<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:gravity="start"
	android:padding="7dp">

	<CheckBox android:id="@+id/checkActivada"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_marginStart="8dp" android:textColor="@color/color_gris_claro"
		android:layout_marginLeft="8dp" />

	<TextView android:id="@+id/text1"
		android:layout_width="200dp"
		android:layout_height="wrap_content"
		android:textSize="14sp"
		android:paddingTop="9dp"
		android:typeface="normal"
		android:paddingStart="15dp"
		android:paddingEnd="10dp"
		android:paddingBottom="5dp"
		android:layout_marginStart="10dp"
        android:paddingLeft="15dp"
		android:layout_marginLeft="10dp"
		android:paddingRight="10dp"
		android:textColor="@color/color_gris_oscuro"/>


	<LinearLayout android:id="@+id/linearDatos"
		android:layout_width="wrap_content" android:layout_height="match_parent"
		android:orientation="horizontal"
		android:gravity="end"
		android:layout_margin="1dp">



	<ImageButton android:id="@+id/editButton"
		android:layout_width="30dp" android:layout_height="30dp"
		android:layout_marginLeft="5dp"
		android:layout_marginStart="5dp"
		android:contentDescription="â–º"
		android:padding="2dp"
		android:layout_gravity="center|center_horizontal"
		android:src="@drawable/edit_icon_mini"
		android:background="@drawable/custom_button">
	</ImageButton>

	<ImageButton android:id="@+id/removeButton"
		android:layout_width="30dp" android:layout_height="30dp"
		android:layout_gravity="center|center_horizontal"
		android:layout_marginLeft="15dp"
		android:layout_marginStart="15dp"
		android:contentDescription="-"
		android:background="@drawable/custom_button"
		android:padding="2dp"
		android:src="@drawable/delete_icon_mini">
	</ImageButton>

	</LinearLayout>

</LinearLayout>
