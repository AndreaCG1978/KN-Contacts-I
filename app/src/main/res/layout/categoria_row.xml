<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="fill_parent"
	android:orientation="horizontal"
	android:gravity="start">


	<TextView android:id="@+id/text1" android:layout_width="245dp"
		android:layout_height="wrap_content" android:background="@drawable/custom_text_expandable_group_label"
		android:textSize="13sp" android:paddingTop="9dp"
		android:typeface="monospace" android:paddingStart="15dp"
		android:paddingEnd="10dp" android:paddingBottom="5dp"
		android:layout_marginStart="10dp"
        android:paddingLeft="15dp"
		android:layout_marginLeft="10dp"
		android:paddingRight="10dp" />


	<LinearLayout
		android:layout_width="wrap_content" android:layout_height="fill_parent"
		android:orientation="horizontal"
		android:gravity="end">

	<CheckBox android:id="@+id/checkActivada"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_marginStart="3dp" android:textColor="@color/color_gris_claro"
		android:layout_marginLeft="3dp" />

	<Button android:id="@+id/removeButton"
		android:layout_width="30dp" android:layout_height="28dp"
		android:text="-"
		android:textColor="@android:color/holo_red_light"
		android:textSize="18sp"
		android:textStyle="bold"
		android:layout_gravity="center"
		android:layout_marginRight="10dp" android:layout_marginLeft="10dp"
		android:contentDescription="-"
		android:paddingBottom="3dp"
		android:paddingTop="1dp"
		android:typeface="monospace"
		android:background="@drawable/custom_button">
	</Button>

	</LinearLayout>

</LinearLayout>
