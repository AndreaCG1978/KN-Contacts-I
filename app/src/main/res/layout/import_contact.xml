<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@color/color_gris_claro"
	xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical"
	>


	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:gravity="center"
		android:background="@color/color_gris_oscuro"
		android:layout_margin="5dp"
		android:padding="3dp" >


		<ImageButton android:id="@+id/botonPrevContact"
			android:layout_width="35dp"
			android:background="@drawable/prev_icon"
			android:layout_height="35dp"
			android:layout_margin="5dp"
			android:padding="4dp"


            />

		<TextView
			android:id="@+id/textPersonaEncontrada"
			android:layout_width="230dp"
			android:layout_height="100dp"
			android:textSize="16sp"
			android:textColor="@color/color_blanco"
			android:layout_margin="8dp"
			android:padding="2dp"
			android:gravity="center"
			/>


		<ImageButton android:id="@+id/botonSkipContact"
			android:layout_width="35dp"
			android:background="@drawable/next_icon"
			android:layout_height="35dp"
            android:layout_margin="5dp"
            android:paddingLeft="7dp"/>

	</LinearLayout>

	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:gravity="center" android:background="@color/color_gris_oscuro"
		android:layout_margin="5dp"
		android:padding="5dp">

		<Button android:id="@+id/botonAddContact" android:layout_width="wrap_content"
			android:layout_height="30dp" android:layout_margin="5dp"
			android:textSize="10sp" android:textColor="@color/color_blanco"
			android:background="@drawable/custom_button" android:layout_gravity="center"
			android:padding="8dp"/>

		<Button android:id="@+id/botonAddAll" android:text="@string/label_agregar_todos"
			android:layout_width="wrap_content" android:layout_height="30dp"
			android:layout_marginLeft="15dp" android:textSize="10sp"
			android:textColor="@color/color_blanco" android:background="@drawable/custom_button"
			android:layout_gravity="center"
			android:padding="8dp"/>


		<Button android:id="@+id/botonSkipAll" android:text="@string/label_omitir_todos"
			android:layout_width="wrap_content" android:layout_height="30dp"
			android:layout_marginLeft="15dp" android:textSize="10sp"
			android:textColor="@color/color_blanco" android:background="@drawable/custom_button"
			android:layout_gravity="center"
			android:padding="8dp"/>

	</LinearLayout>


	<TextView
		android:id="@+id/textTelsPersonaEncontrada"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textSize="13sp"
		android:background="@color/color_gris_claro"
		android:textColor="@color/color_negro"
		android:layout_margin="5dp"
		android:padding="5dp" />


	<TextView
		android:id="@+id/textMailsPersonaEncontrada"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textSize="13sp"
		android:background="@color/color_gris_claro"
		android:textColor="@color/color_negro"
		android:layout_margin="5dp"
		android:padding="5dp" />


	<TextView
		android:id="@+id/textDirsPersonaEncontrada"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textSize="13sp"
		android:background="@color/color_gris_claro"
		android:textColor="@color/color_negro"
		android:layout_margin="5dp"
		android:padding="5dp" />

	<View android:layout_width="match_parent" android:layout_height="1px"
		android:background="@color/color_gris_oscuro"/>

	<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
		android:orientation="horizontal" android:layout_margin="5dp"
		android:gravity="left|center_vertical"
		android:padding="7dp">



		<LinearLayout
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:orientation="horizontal" android:layout_margin="5dp"
			android:gravity="left"
			android:background="@drawable/custom_text_view_apellido">


			<Spinner android:id="@+id/spinnerCategorias_alta_persona"
				android:layout_width="250dp"
				android:layout_height="43dp"
				android:layout_marginEnd="10dp"
				android:layout_marginTop="8dp"
				android:layout_marginBottom="8dp"
				style="@style/SpinnerTheme"
				android:layout_marginRight="10dp"
				android:layout_marginStart="10dp"
				/>


		</LinearLayout>

		<ImageButton android:id="@+id/imagenCategorias"
			android:background="@drawable/categoria_icon"
			android:layout_height="34dp" android:layout_width="34dp"
			android:contentDescription="imagenCategorias"
			android:layout_marginLeft="15dp"
			/>


	</LinearLayout>

	<LinearLayout android:id="@+id/linearCaracteristica"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="horizontal" android:layout_marginLeft="17dp"
		>

		<TextView android:id="@+id/label_datoExtra"
			android:layout_width="120dp" android:layout_height="wrap_content"
			android:textSize="13sp" android:padding="5dp" android:gravity="end"
			android:singleLine="true" android:background="@drawable/custom_text_view_categoria_desc"
			android:textColor="@color/color_azul_oscuro" />

		<EditText android:id="@+id/entryDatoExtra"
			android:inputType="textCapWords|textMultiLine"
			android:layout_height="wrap_content"
			android:textStyle="bold"
			android:textColor="@color/color_gris_oscuro"
			android:padding="5dp"
			android:textColorHint="@color/color_gris"
			android:textSize="15sp"
			android:layout_marginStart="3dp"
			android:layout_marginEnd="4dp"
			android:layout_width="match_parent"
			android:maxLength="50"
			android:importantForAutofill="no"
			android:hint="@string/hint_caracteristica"
			android:layout_marginLeft="3dp"
			android:layout_marginRight="4dp"
			android:lines="3"
			android:minLines="1"
			android:maxLines="3"
			android:ellipsize="none"
			android:singleLine="false"
			android:scrollHorizontally="false"
			android:scrollbars="vertical"
			android:gravity="top|start"

			/>
	</LinearLayout>

	<LinearLayout
        android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="horizontal" android:layout_marginLeft="17dp" android:layout_marginTop="7dp"
		>

		<TextView android:id="@+id/label_descripcion" android:text="@string/hint_descripcion"
			android:layout_width="120dp" android:layout_height="wrap_content"
			android:textSize="13sp" android:padding="5dp" android:gravity="end"
			android:singleLine="true" android:background="@drawable/custom_text_view_categoria_desc"
			android:textColor="@color/color_azul_oscuro" />

		<EditText android:id="@+id/entryDescripcion" android:hint="@string/hint_descripcion"
			android:inputType="textCapWords|textMultiLine"
			android:layout_height="wrap_content"
			android:textStyle="bold"
			android:textColor="@color/color_gris_oscuro"
			android:padding="5dp"
			android:textSize="15sp"
			android:layout_marginStart="3dp"
			android:layout_marginEnd="4dp"
			android:layout_width="match_parent"
			android:textColorHint="@color/color_gris"
			android:maxLength="60"
			android:importantForAutofill="no"
			android:layout_marginLeft="3dp"
			android:layout_marginRight="4dp"
			android:lines="3"
			android:minLines="1"
			android:maxLines="3"
			android:ellipsize="none"
			android:singleLine="false"
			android:scrollHorizontally="false"
			android:scrollbars="vertical"
			android:gravity="top|start"
			/>
	</LinearLayout>





</LinearLayout>

</ScrollView>