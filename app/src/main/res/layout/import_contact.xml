<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical">

	<TextView android:id="@+id/textPersonaEncontrada"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:textSize="18sp" android:background="@layout/custom_text_view_categoria"
		android:textColor="@color/color_azul_oscuro"
		android:layout_marginBottom="1dp" android:layout_marginTop="6dp"
		android:padding="3dp" android:gravity="center" android:textStyle="bold"></TextView>

	<TextView android:id="@+id/textTipoPersonaEncontrada"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:textSize="13sp" android:background="@layout/custom_text_view_categoria_desc"
		android:textColor="@color/color_gris_oscuro"
		android:layout_marginBottom="4dp" android:layout_marginTop="6dp"
		android:padding="3dp" android:gravity="center" android:textStyle="bold"></TextView>

	<View android:id="@+id/linea3" android:layout_width="wrap_content"
		android:layout_height="1px" android:layout_marginBottom="6dp"
		android:layout_marginTop="6dp" android:background="@color/color_azul" />


	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:gravity="left" android:layout_margin="8dp">


		<Spinner android:id="@+id/spinnerCategorias_alta_persona"
			android:layout_below="@id/label_category" android:layout_width="wrap_content"
			android:layout_height="38dp" android:layout_marginLeft="5dp"
			android:background="@layout/custom_button" />


		<ImageButton android:id="@+id/imagenCategorias" android:background="@drawable/categoria_icon"
			android:layout_height="34dp" android:layout_width="34dp"
			android:layout_marginLeft="18dp" />
	
	</LinearLayout>

	<LinearLayout android:id="@+id/linearCaracteristica"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="horizontal" android:layout_margin="5dp"
		>

		<TextView android:id="@+id/label_datoExtra"
			android:layout_width="130dp" android:layout_height="wrap_content"
			android:textSize="13sp" android:padding="8dp" android:gravity="right"
			android:singleLine="true" android:background="@layout/custom_text_view_categoria_desc"
			android:textColor="@color/color_azul_oscuro" />

		<EditText android:id="@+id/entryDatoExtra" android:inputType="textCapWords"
			android:layout_height="35dp" android:textStyle="bold"
			android:textColor="@color/color_azul_oscuro" 
			android:padding="5dp" android:textSize="14sp"
			android:layout_marginLeft="3dp" android:layout_marginRight="4dp"
			android:layout_width="fill_parent" android:maxLength="30" />
	</LinearLayout>

	<LinearLayout android:id="@+id/linearDesc"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="horizontal" android:layout_margin="5dp"
		>

		<TextView android:id="@+id/label_descripcion" android:text="@string/hint_descripcion"
			android:layout_width="130dp" android:layout_height="wrap_content"
			android:textSize="13sp" android:padding="8dp" android:gravity="right"
			android:singleLine="true" android:background="@layout/custom_text_view_categoria_desc"
			android:textColor="@color/color_azul_oscuro" />

		<EditText android:id="@+id/entryDescripcion" android:hint="@string/hint_descripcion"
			android:inputType="textCapWords" android:layout_height="35dp"
			android:textStyle="bold" android:textColor="@color/color_azul_oscuro"
			android:padding="5dp"
			android:textSize="14sp" android:layout_marginLeft="3dp"
			android:layout_marginRight="4dp" android:layout_width="fill_parent"
			android:maxLength="40" />
	</LinearLayout>



	<View android:id="@+id/linea4" android:layout_width="wrap_content"
		android:layout_height="1px" android:layout_marginBottom="6dp"
		android:layout_marginTop="6dp" android:background="@color/color_azul" />

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:gravity="center">


		<Button android:id="@+id/botonPrevContact" android:text="@string/label_anterior"
			android:layout_width="wrap_content" android:layout_height="35dp"
			android:layout_margin="5dp" android:textSize="12sp"
			android:textColor="@color/color_azul" android:background="@layout/custom_button"
			android:layout_gravity="center" />

		<Button android:id="@+id/botonSkipContact" android:text="@string/label_siguiente"
			android:layout_width="wrap_content" android:layout_height="35dp"
			android:layout_margin="5dp" android:textSize="12sp"
			android:textColor="@color/color_azul" android:background="@layout/custom_button"
			android:layout_gravity="center" />

		<Button android:id="@+id/botonAddContact" android:layout_width="wrap_content"
			android:layout_height="35dp" android:layout_margin="5dp"
			android:textSize="12sp" android:textColor="@color/color_azul"
			android:background="@layout/custom_button" android:layout_gravity="center" />


	</LinearLayout>

	<View android:id="@+id/linea2" android:layout_width="wrap_content"
		android:layout_height="1px" android:layout_marginBottom="6dp"
		android:layout_marginTop="6dp" android:background="@color/color_azul" />


	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:gravity="center">

		<Button android:id="@+id/botonAddAll" android:text="@string/label_agregar_todos"
			android:layout_width="wrap_content" android:layout_height="35dp"
			android:layout_margin="10dp" android:textSize="12sp"
			android:textColor="@color/color_azul" android:background="@layout/custom_button"
			android:layout_gravity="center" />


		<Button android:id="@+id/botonSkipAll" android:text="@string/label_omitir_todos"
			android:layout_width="wrap_content" android:layout_height="35dp"
			android:layout_margin="10dp" android:textSize="12sp"
			android:textColor="@color/color_azul" android:background="@layout/custom_button"
			android:layout_gravity="center" />

	</LinearLayout>

</LinearLayout>
