<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:gravity="center"
	android:background="@color/color_gris_oscuro">

	<View android:layout_width="wrap_content"
		android:layout_height="1px"
		android:layout_marginBottom="8dp"
		android:background="@color/color_gris_claro" />

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center"
		>

		<ImageButton android:id="@+id/buttonVerPersona"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/person_add_icon"
			android:layout_margin="15dp"/>

		<ImageButton android:id="@+id/buttonEditarPersona"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/edit_icon"
			android:layout_margin="15dp"/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center">


		<ImageButton android:id="@+id/buttonEnviarInfoPersona"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/next_icon"
			android:layout_margin="15dp"/>

		<ImageButton android:id="@+id/buttonBorrarPersona"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/delete"
			android:layout_margin="15dp"/>

	</LinearLayout>

</LinearLayout>
