<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="@color/color_gris_claro">

	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="start"
		android:orientation="vertical">



		<LinearLayout android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="5dp"
			android:orientation="horizontal"
			android:background="@color/color_gris_oscuro"
			android:padding="5dp"
			android:layout_gravity="center">

			<TextView
				android:text="@string/title_proteccion_categorias"
				android:textColor="@color/color_gris_claro"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textSize="15sp"
				android:textStyle="bold"
				android:layout_marginTop="5dp"
				android:layout_marginBottom="10dp"
				android:gravity="center"
				android:background="@color/color_gris_oscuro">
			</TextView>

		</LinearLayout>

		<TextView android:id="@+id/leyendaNoSeRegistraPass"
			android:text="@string/mensaje_leyenda_registrar_contrasenia"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@color/color_celeste"
			android:textColor="@color/color_gris_claro"
			android:padding="7dp"
			android:gravity="left"
			android:textSize="12sp"
			android:layout_margin="5dp">
		</TextView>

		<LinearLayout android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:orientation="horizontal"
			android:gravity="end">

			<Button android:id="@+id/botonRegistrarContrasenia"
				android:layout_width="wrap_content"
				android:layout_height="28dp"
				android:text="@string/label_registrar_contrasenia"
				android:textColor="@android:color/white"
				android:contentDescription="savePassword"
				android:typeface="normal"
				android:textSize="12sp"
				android:layout_marginStart="30dp"
				android:background="@drawable/custom_button"
				/>
		</LinearLayout>

		<LinearLayout android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:layout_margin="5dp"
			android:orientation="horizontal">

			<TextView android:text="@string/label_contrasenia"
				android:layout_width="160dp"
				android:layout_height="30dp"
				android:background="@drawable/custom_text_view_categoria_desc"
				android:textColor="@color/color_gris_claro"
				android:padding="5dp"
				android:gravity="end"
				android:textSize="12sp">
			</TextView>

			<EditText android:id="@+id/contrasenia1"
				android:textColor="@color/color_negro"
				android:layout_width="match_parent"
				android:layout_height="35dp"
				android:padding="4dp"
				android:textSize="15sp"
				android:layout_marginLeft="4dp"
				android:layout_marginRight="4dp"
				android:inputType="textPassword"
				android:maxLength="20"
				android:importantForAutofill="no"
				android:hint="@string/hint_contrasenia"
				android:textColorHint="@color/color_gris">
			</EditText>

		</LinearLayout>

		<LinearLayout android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_margin="5dp"
			android:gravity="center_vertical">


			<TextView android:layout_width="160dp"
				android:layout_height="30dp"
				android:background="@drawable/custom_text_view_categoria_desc"
				android:textColor="@color/color_gris_claro"
				android:padding="5dp"
				android:gravity="end"
				android:textSize="12sp"
				android:text="@string/label_repetir_contrasenia">
			</TextView>

			<EditText android:id="@+id/contrasenia2"
				android:textColor="@color/color_negro"
				android:layout_width="match_parent"
				android:layout_height="35dp"
				android:padding="4dp"
				android:textSize="15sp"
				android:layout_marginLeft="4dp"
				android:layout_marginRight="4dp"
				android:inputType="textPassword"
				android:maxLength="20"
				android:importantForAutofill="no"
				android:hint="@string/hint_contrasenia"
				android:textColorHint="@color/color_gris">
			</EditText>

		</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
			android:layout_marginRight="15dp"
			android:layout_marginEnd="15dp"
            android:orientation="horizontal">


            <ImageButton android:id="@+id/botonReenviarPass"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:contentDescription="activateProtection"
                android:layout_gravity="center"
                android:background="@drawable/send_password_icon"/>

        </LinearLayout>
		<LinearLayout android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:layout_margin="5dp"
			android:orientation="horizontal">

			<TextView android:text="@string/label_mail"
				android:layout_width="70dp"
				android:layout_height="30dp"
				android:background="@drawable/custom_text_view_categoria_desc"
				android:textColor="@color/color_gris_claro"
				android:padding="5dp"
				android:gravity="end"
				android:textSize="12sp">
			</TextView>

			<EditText android:id="@+id/mailPassword"
				android:textColor="@color/color_negro"
				android:layout_width="match_parent"
				android:layout_height="35dp"
				android:padding="4dp"
				android:textSize="15sp"
				android:layout_marginLeft="4dp"
				android:layout_marginRight="4dp"
				android:inputType="textEmailAddress"
				android:maxLength="90"
				android:hint="@string/label_email"
				android:textColorHint="@color/color_gris"
				android:importantForAutofill="no">
			</EditText>




		</LinearLayout>


	</LinearLayout>



	<LinearLayout android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_margin="5dp"
		android:orientation="vertical"
		android:background="@color/color_gris_claro">


		<LinearLayout android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:background="@color/color_gris_oscuro"
			android:layout_gravity="center"
			android:layout_marginBottom="10dp">


			<TextView android:id="@+id/tituloCategorias"
				android:textColor="@color/color_gris_claro"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textSize="13sp"
				android:textStyle="bold"
				android:padding="5dp"
				android:gravity="center"
				android:background="@color/color_gris_oscuro"
				>
			</TextView>

		</LinearLayout>

		<LinearLayout android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="5dp"
			android:orientation="horizontal"
			android:gravity="right">

			<Button android:id="@+id/botonActivarDesactivarPass"
				android:layout_width="wrap_content"
				android:layout_height="28dp"
				android:contentDescription="activateProtection"
				android:text="@string/label_activar_categoria"
				android:textColor="@android:color/white"
				android:textSize="12sp"
				android:layout_gravity="center"
				android:typeface="normal"
				android:background="@drawable/custom_button"/>


		</LinearLayout>




		<ListView android:id="@android:id/list"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:dividerHeight="7dp"
			android:divider="@color/color_gris_claro"
			android:fastScrollEnabled="true"
			android:layout_marginTop="5dp"
			android:listSelector="@android:color/transparent">
		</ListView>


	</LinearLayout>

</LinearLayout>


