<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="horizontal" android:layout_margin="5dp">

	<TextView android:id="@+id/rowTipo" android:layout_width="95dp"
		android:layout_height="fill_parent" android:textColor="@color/color_negro"
		android:textSize="12sp"
		android:singleLine="false"
		android:paddingTop="8dp"
		android:paddingBottom="8dp"
		android:gravity="end|center"
		android:background="@drawable/custom_text_view_categoria"
        android:paddingLeft="2dp"
		android:paddingStart="2dp"
        android:paddingRight="8dp"
		android:paddingEnd="8dp"
		android:textAllCaps="true"
		android:typeface="normal"
		android:textStyle="bold">
	</TextView>

	<TextView android:id="@+id/rowValor" android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:textColor="@color/color_naranja_oscuro"
		android:textSize="16sp"
		android:background="@drawable/custom_text_view_categoria"
		android:paddingStart="10dp"
		android:paddingTop="12dp"
		android:paddingEnd="5dp"
		android:paddingBottom="12dp"
		android:layout_marginStart="2dp"
        android:paddingLeft="10dp"
        android:layout_marginLeft="2dp"
        android:paddingRight="5dp"
		android:typeface="normal">
	</TextView>



</LinearLayout>

