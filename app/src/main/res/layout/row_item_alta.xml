<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="horizontal"
	android:gravity="center_vertical"
	android:descendantFocusability="beforeDescendants"
	android:background="@color/color_gris_claro">

	<EditText android:id="@+id/rowTipo" android:layout_width="90dp"
		android:layout_height="wrap_content"
		android:textSize="12sp"
		android:padding="7dp"
		android:gravity="end"
		android:background="@drawable/custom_text_view_categoria_desc"
		android:typeface="normal"
		android:focusable="false"
		android:textColor="@color/color_gris_claro"
		android:textAllCaps="true">
	</EditText>

	<EditText android:id="@+id/rowValor"
		android:layout_height="wrap_content"
        android:layout_width="218dp"
		android:textColor="@color/color_negro"
		android:typeface="normal"
		android:padding="5dp"
		android:textSize="15sp"
		android:layout_marginLeft="5dp"
		android:layout_marginStart="5dp"
		android:layout_marginEnd="1dp"
		android:layout_marginRight="1dp"
		android:maxLength="120"
		android:selectAllOnFocus="true"
		android:lines="5"
		android:minLines="1"
		android:maxLines="5"
		android:ellipsize="none"
		android:singleLine="false"
		android:scrollHorizontally="false"
		android:scrollbars="vertical"
		android:gravity="top|start"/>


	<Button android:id="@+id/removeButton"
		android:layout_width="25dp"
		android:layout_height="25dp"
		android:gravity="center"
		android:layout_marginRight="1dp"
		android:layout_marginLeft="1dp"
		android:contentDescription="X"
		android:background="@drawable/delete_icon_mini"
		>
	</Button>





</LinearLayout>

