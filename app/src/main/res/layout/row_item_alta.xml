<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="horizontal" android:layout_margin="5dp"
	android:gravity="center_vertical"
	android:descendantFocusability="beforeDescendants"
	android:background="@color/color_gris_claro">

	<EditText android:id="@+id/rowTipo" android:layout_width="90dp"
		android:layout_height="wrap_content"
		android:textSize="15sp"
		android:padding="7dp"
		android:gravity="end"
		android:background="@drawable/custom_text_view_categoria_desc"
		android:typeface="monospace"
		android:focusable="false"
		android:textColor="@color/color_negro"
		android:textAllCaps="true">
	</EditText>

	<EditText android:id="@+id/rowValor"
		android:layout_height="35dp"
        android:layout_width="200dp"
		android:textColor="@color/color_negro"
		android:typeface="monospace"
		android:padding="5dp"
		android:textSize="15sp"
		android:layout_marginStart="5dp" android:layout_marginEnd="4dp"
		android:maxLength="30"
		android:selectAllOnFocus="true"
		android:layout_marginRight="4dp"
        android:singleLine="true"
		android:layout_marginLeft="5dp" />


	<Button android:id="@+id/removeButton"
		android:layout_width="30dp" android:layout_height="26dp"
		android:text="-"
		android:textColor="@android:color/white"
		android:textSize="22sp"
		android:textStyle="bold"
		android:layout_gravity="center"
		android:layout_marginRight="10dp"
		android:layout_marginLeft="10dp"
		android:contentDescription="-"
		android:paddingBottom="5dp"
		android:paddingTop="1dp"
		android:typeface="serif"
		android:background="@color/color_gris_oscuro"
		>
	</Button>




</LinearLayout>

